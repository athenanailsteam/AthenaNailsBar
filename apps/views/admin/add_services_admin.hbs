<main class="main-content">
    <div id="mainContent">
        <div class="container mt-60">
            <div class="masonry-item col-md-12">
                <div class="card shadow mb-4">
                    <div class="text-center card-header py-3 text-center">
                        <h3 style="font-weight: bold; color: #029a00"><a href="/writer/add-content"></a>EDIT SERVICE
                        </h3>
                    </div>
                    <div class="card-body">
                        <div class="mt-30">
                            <form onsubmit="return UpdatePost   ({{post.id}});" id="formAddPost">
                                <div class="form-row">
                                    <div class="form-group col-md-8"><label for="title">
                                            <h4>Service Name</h4>
                                        </label>
                                        <textarea rows="2" type="text" class="form-control" id="title" name="title"
                                            placeholder="Type name of service">{{post.title}}</textarea></div>
                                    <div class="form-group col-md-8"><label for="summary_content">
                                        <form action="#" method="POST" enctype="multipart/form-data">
                                            <h4>Choose Name</h4>
                                            <span>
                                                <input type="file" name="file" />
                                            </span>
                                        </form>
                                    </div>  
                                </div>
                                </div>                   
                                </div>
                    <div class="form-group col-md-8">
                        <label for="title">
                        <h4>Image Url</h4>
                        </label>
                    <textarea rows="1" type="text" class="form-control" id="title" name="title"
                        placeholder="Autogenerate when choose image to upload url">{{post.title}}</textarea></div>                   
                    <hr>
                    <button type="submit" href="/" class="btn btn-primary mr-2 ml-2 mb-3">ADD SERVICE</button>
                        {{#if success}}
                        <div class="alert alert-success" role="alert">
                            {{success}}
                        </div>
                        {{/if}}
                        {{#if error}}
                        <div class="alert alert-success" role="alert">
                            {{error}}
                        </div>
                        {{/if}}                        
                    </form>
                </div>
            </div>
        </div>
    </div>
    </div>
</main>
<script>

    //add new post
    function UpdatePost(id) {
        var frmUn = $('form').serializeArray();
        var frm = {};
        $.map(frmUn, function (n, i) {
            frm[n['name']] = n['value'];
        });

        $.ajax({
            url: '/writer/manage-draft/edit-post/' + id,
            method: 'POST',
            dataType: 'json',
            contentType: 'application/json',
            data: JSON.stringify(frm),
            complete: () => console.log('Complete post update'),
            success: (data) => {
                console.log('Update post success');
                TagPostSubmit(id);
            },
            error: (error) => {
                console.log(error);
                console.log('Update post failed');
                window.location.replace('/writer');
            }
        });
        return false;
    }


</script>