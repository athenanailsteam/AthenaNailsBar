<main class="main-content">
    <div id="mainContent">
        <div class="container mt-60">
            <div class="masonry-item col-md-12">
                <div class="card shadow mb-4">
                    <div class="text-center card-header py-3 text-center">
                        <h3 class="" style="font-weight: bold; color: #029a00"><a href="/writer/add-content"></a>POST
                            FORM
                        </h3>
                    </div>
                    <div class="card-body">
                        <div class="mt-30">
                            <form onsubmit="return UpdatePost   ({{post.id}});" id="formAddPost">
                                <div class="form-row">
                                    <div class="form-group col-md-8"><label for="title">
                                            <h4>Title</h4>
                                        </label>
                                        <textarea rows="3" type="text" class="form-control" id="title" name="title"
                                            placeholder="Title of post">{{post.title}}</textarea></div>
                                    <div class="form-group col-md-8"><label for="summary_content">
                                            <h4>Summary content</h4>
                                        </label>
                                        <textarea rows="4" type="text" class="form-control" name="summary_content"
                                            id="summary_content"
                                            placeholder="Summary content">{{post.summary_content}}</textarea>
                                    </div>
                                    <div class="form-group col-md-6"><label for="summary_content">
                                            <h4>Image big size</h4>
                                        </label>
                                        <input value="{{post.avatar}}" type="text" class='form-control' name="avatar"
                                            required />
                                    </div>
                                    <div class="form-group col-md-6"><label for="summary_content">
                                            <h4>Image thumbnail</h4>
                                        </label>
                                        <input value="{{post.thumb_img}}" type="text" class='form-control'
                                            name="thumb_img" required />
                                    </div>
                                </div>
                        </div>                   
                        <label for="category">
                            <h4>Category</h4>
                        </label>
                        <select id="category" name="category_id" class="form-control col-md-8" required>
                            <option value="">None</option>
                            {{#each categories}}
                            <option {{#if selected}} selected {{/if}} value="{{id}}">{{name}}</option>
                            {{/each}}
                        </select>
                        <h4 class="mt-3">Tags</h4>
                        <div class="aside-widget mt-30">
                            <div class="tags-widget">
                                <ul id="listTags">
                                    {{#each tags}}
                                    <li onclick="ToggleTag({{id}})" class="tag ml-2 {{#if active}}
                                            tag-active
                                        {{/if}}" id="{{id}}"><a>{{name}}</a></li>
                                    {{/each}}
                                </ul>
                            </div>
                        </div>
                    </div><button type="submit" class="btn btn-success mr-2 ml-2 mb-3">Save post</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    </div>
</main>

<script>

    //add new post
    function UpdatePost(id) {
        var frmUn = $('form').serializeArray();
        var frm = {};
        $.map(frmUn, function (n, i) {
            frm[n['name']] = n['value'];
        });

        $.ajax({
            url: '/writer/manage-draft/edit-post/' + id,
            method: 'POST',
            dataType: 'json',
            contentType: 'application/json',
            data: JSON.stringify(frm),
            complete: () => console.log('Complete post update'),
            success: (data) => {
                console.log('Update post success');
                TagPostSubmit(id);
            },
            error: (error) => {
                console.log(error);
                console.log('Update post failed');
                window.location.replace('/writer');
            }
        });
        return false;
    }


</script>