<main class="main-content bgc-grey-100">
  <div id="mainContent">
    <div class="container-fluid">
      <h1 class="table-header text-center">Manage Services</h1>
      <div class="card shadow mb-4">
        <div class="card-header py-3">
          <h6 class="m-0 font-weight-bold text-primary">Services table</h6>
          <a href="/admin/manage_services_detail/add"><button type="button" class="btn btn-success ml-2"><i
                class="fas fa-plus-circle mr-1" style="color:#ffffff;"></i>Add Services</button></a>
        </div>
        <div class="card-body">
          <div class="table-responsive">
            <table class="table table-bordered text-center" id="dataTable" width="100%" cellspacing="0">
             <thead>
                <tr>
                  <th>#</th>
                  <th>Service Name</th>
                  <th>Image Service</th>
                  <th>Created At</th>
                </tr>
              </thead>
              <tfoot>
                <tr>
                  <th>#</th>
                  <th>Service Name</th>
                  <th>Image Service</th>
                  <th>Created At</th>
                </tr>
              </tfoot>
              <tbody>
                {{#each this.services}}
                <tr>
                  <td>{{id}}</td>
                  <td>{{services_name}}</td>
                  <td>
                    <form action="#" method="POST" enctype="multipart/form-data">
                      <div class="file-field input-field">
                        <p>{{this.msg}}</p>
                        <div class="btn">
                          <span>File</span>
                          <input type="file" name="file">
                        </div>
                        <div class="file-path-wrapper">
                          <input class="file-path validate" type="text">
                        </div>
                      </div>
                      <div class="waves-effect waves-light btn">
                        <input type="submit" value="upload to server">
                      </div>
                    </form>
                    <hr>
                    <div>
                      <p><strong> Image Path</strong></p>
                      <hr>
                      <p>{{this.dir}}</p>
                    </div>
                  </td>
                  <td>{{created_at}}</td>
                </tr>
                {{/each}}
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>