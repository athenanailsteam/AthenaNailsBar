<main class="main-content bgc-grey-100">
    <div id="mainContent">
        <div class="container-fluid">
            <h1 class="table-header text-center">Manage Services</h1>
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Services table</h6>
                    <a href="/admin/manage-services/add"><button type="button" class="btn btn-success ml-2"><i
                                class="fas fa-plus-circle mr-1" style="color:#ffffff;"></i>Add Services</button></a>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered text-center" id="dataTable" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Service Name</th>
                                    <th>Image Service</th>
                                    <th>Created At</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tfoot>
                                <tr>
                                    <th>#</th>
                                    <th>Service Name</th>
                                    <th>Image Service</th>
                                    <th>Created At</th>
                                    <th></th>
                                </tr>
                            </tfoot>
                            <tbody>
                                {{#each this.services}}
                                <tr>
                                    <td>{{id}}</td>
                                    <td width="15%">{{services_name}}</td>
                                    <td>
                                        <form action="#" method="POST" enctype="multipart/form-data">
                                            <p>Choose File</p>
                                            <span class="hiddenFileInput">
                                                <input type="file" name="file" />
                                            </span>
                                            <input type="submit" value="Submit">
                                                {{#if success}}
                                                <div class="alert alert-success" role="alert">
                                                    {{success}}
                                                </div>
                                                {{/if}}
                                                {{#if error}}
                                                <div class="alert alert-success" role="alert">
                                                    {{error}}
                                                </div>
                                                {{/if}}                                           
                                        </form>
                                        <br><br>
                                        <img src="../img/upload/bg_title.jpg" style="width:450px">
                                        <hr>
                                        <div>
                                            <p><strong> Image Path</strong></p>
                                            <h5>{{image_service}}</h5>
                                        </div>
                                    </td>
                                    <td width="8%">{{moment created_at format="YYYY/MM/DD hh:mm:ss"}}</td>
                                    <td width="10%">
                                            <a href="/admin/manage-services/edit?id={{id}}"><button type="button"
                                            class="btn btn-primary ml-2"><i class="fas fa-edit mr-1"
                                            style="color:#ffffff;"></i>Edit</button></a>                                                                                  
                                    </td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
            </table>
            </div>
        </div>
    </div>
</main>